<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/student_name_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:hint="Student Name"
        android:textStyle="bold"
        android:inputType="text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/student_description_dialog_text"
        android:layout_below="@id/student_name_dialog_text"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:hint="Student Description"
        android:inputType="text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <!--
    <TimePicker
        android:id="@+id/student_time_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/student_description_dialog_text"
        android:timePickerMode="spinner"/>
        -->
    <EditText
        android:id="@+id/time"
        android:layout_below="@id/student_description_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Time in 12 hour format"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>